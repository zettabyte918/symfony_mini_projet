{% extends 'base.html.twig' %} {% block title %}Register{% endblock %} {% block
body %}
<div class="min-h-full flex">
  <div
    class="flex-1 flex flex-col justify-center py-12 px-4 sm:px-6 lg:flex-none lg:px-20 xl:px-24"
  >
    <div class="mx-auto w-full max-w-sm lg:w-96">
      <div>
        <img
          class="h-12 w-auto"
          src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg"
          alt="Workflow"
        />
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
          Create a new account now!
        </h2>
      </div>
      <div>
        {% if app.user %}
        <div class="mb-3">
          <!-- This example requires Tailwind CSS v2.0+ -->
          <div class="rounded-md mt-4 bg-blue-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <!-- Heroicon name: solid/information-circle -->
                <svg
                  class="h-5 w-5 text-blue-400"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                    clip-rule="evenodd"
                  />
                </svg>
              </div>
              <div class="ml-3 flex-1 md:flex md:justify-between">
                <p class="text-sm text-blue-700">
                  You are logged in as {{ app.user.userIdentifier }},
                </p>
                <p class="mt-3 text-sm md:mt-0 md:ml-6">
                  <a
                    href="{{ path('app_logout') }}"
                    class="whitespace-nowrap flex justify-center items-center tex font-medium text-blue-700 hover:text-blue-600"
                    >Logout <span aria-hidden="true">&rarr;</span></a
                  >
                </p>
              </div>
            </div>
          </div>
        </div>
        {% endif %}
      </div>
      <div class="mt-8">
        <div class="mt-6">
          {{ form_start(registrationForm) }}
          {{
            form_row(registrationForm.email, {
              label: "Email",
              label_attr: { class: "block text-sm font-medium text-gray-700" }
            })
          }}

          {{
            form_row(registrationForm.plainPassword, {
              label: "Password",
              label_attr: { class: "block text-sm font-medium text-gray-700" }
            })
          }}
          <div class="flex items-center">
            {{ form_row(registrationForm.agreeTerms) }}
          </div>

          <div>
            <button
              type="submit"
              class="w-full flex justify-center py-2 mt-4 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Register
            </button>
          </div>
          {{ form_end(registrationForm) }}
        </div>
      </div>
    </div>
  </div>
  <div class="hidden lg:block relative w-0 flex-1">
    <img
      class="absolute inset-0 h-full w-full object-cover"
      src="{{ asset('security/login_background.jpg') }}"
      alt=""
    />
  </div>
</div>

{% endblock %}
